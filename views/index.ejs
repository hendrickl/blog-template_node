<html lang="en">
<% include('./partials/head.ejs') %>

<body>
  <nav>
      <a href="/">Homepage</a>
      <a href="/about">About page</a>
      <a href="/create">Create</a>
  </nav>
  <div class="blogs content">
    <h2>All Blogs</h2>

    <% if (blogs.length > 0) { %>
      <% blogs.forEach(blog => { %>

        <h3 class="title"><%= blog.title %></h3>
        <p class="snippet"><%= blog.snippet %></p>

      <% }) %>
    <% } else { %>
      <p>There are no blogs to display...</p>
    <% } %>
    
  </div>

</body>
</html>